<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Create Month</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>
  <div class="container mt-4">
    <h3>Create Salary Month</h3>

    <form method="POST" class="row g-2">
      <div class="col-md-3">
        <select name="month" class="form-select" required>
          <option value="">Select Month</option>
          <% 
            const months = [
              "01-January","02-February","03-March","04-April","05-May","06-June",
              "07-July","08-August","09-September","10-October","11-November","12-December"
            ];
          %>
          <% months.forEach(m => { 
              const p = m.split('-');
          %>
            <option value="<%= p[0] %>"><%= p[1] %></option>
          <% }) %>
        </select>
      </div>

      <div class="col-md-3">
        <select name="year" class="form-select" required>
          <option value="">Select Year</option>
          <% for(let y = 2020; y <= 2035; y++) { %>
            <option value="<%= y %>"><%= y %></option>
          <% } %>
        </select>
      </div>

      <div class="col-md-2">
        <input name="totalDays" type="number" class="form-control" placeholder="Total Days" required>
      </div>

      <div class="col-md-2">
        <input name="workingDays" type="number" class="form-control" placeholder="Working Days" required>
      </div>

      <div class="col-md-2">
        <button class="btn btn-success w-100">Create</button>
      </div>
    </form>

    <p class="small mt-2">Select month using calendar. Total working hours = workingDays Ã— 8 (auto-calculated on server).</p>
  </div>
</body>
</html>
