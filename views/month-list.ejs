<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Months</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
      <h3>Salary Months</h3>
      <a href="/months/create" class="btn btn-primary">+ Create Month</a>
    </div>

    <table class="table mt-3">
      <thead>
        <tr>
          <th>Month</th>
          <th>Year</th>
          <th>Total Days</th>
          <th>Working Days</th>
          <th>Total Hours</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% months.forEach(m => { %>
          <tr>
            <td><%= m.monthName %></td>
            <td><%= m.year %></td>
            <td><%= m.totalDays %></td>
            <td><%= m.workingDays %></td>
            <td><%= m.totalWorkingHours %></td>
            <td>
              <a href="/salary/create/<%= m._id %>" class="btn btn-sm btn-success">Create Salary</a>
              <a href="/salary/list/<%= m._id %>" class="btn btn-sm btn-info">View</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
