<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Salary Slip</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>body{padding:20px}</style>
</head>
<body>
  <div class="card p-3">
    <h4><%= setting ? setting.title : 'Company' %></h4>
    <div><%= setting ? setting.address : '' %></div>

    <h5 class="mt-2">Pay Slip for <%= month.monthName %> - <%= String(month.year).slice(-2) %></h5>

    <table class="table">
      <tr><td>Employee Name</td><td><%= employee.name %></td><td>Paid Days</td><td><%= salary.paidDays %></td></tr>
      <tr><td>Designation</td><td><%= employee.designation %></td><td>Leaves</td><td><%= salary.leaveDays %></td></tr>
      <tr><td>Department</td><td><%= employee.department %></td><td>Deductions</td><td>Rs. <%= salary.totalDeductions %></td></tr>
      <tr><td>Total Working Day</td><td><%= month.workingDays %></td><td>Advance</td><td>Rs. <%= salary.advance %></td></tr>
      <tr><td>Basic Wage</td><td>Rs. <%= salary.monthlySalary %></td><td>Total Deduction</td><td>Rs. <%= salary.totalDeductions %></td></tr>
      <tr><td>OT</td><td>Rs. <%= salary.otAmount %></td><td>Present Days</td><td><%= salary.presentDays %></td></tr>
      <tr><th>Net Salary</th><th>Rs. <%= salary.netSalary %></th><td></td><td></td></tr>
    </table>

    <div class="d-flex justify-content-between mt-4">
      <div>Employer Sign</div>
      <div>Employee Sign</div>
    </div>
    <div class="mt-3">
      <a class="btn btn-success" href="/salary/slip/<%= salary._id %>/pdf">Download PDF</a>
    </div>
  </div>
</body>
</html>
