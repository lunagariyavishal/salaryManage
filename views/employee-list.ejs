<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Employees</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
      <h3>Employees</h3>
      <a href="/employees/create" class="btn btn-primary">+ Add Employee</a>
    </div>

    <table class="table mt-3">
      <thead><tr><th>Name</th><th>Designation</th><th>Department</th><th>Monthly</th><th>Actions</th></tr></thead>
      <tbody>
        <% employees.forEach(e => { %>
          <tr>
            <td><%= e.name %></td>
            <td><%= e.designation %></td>
            <td><%= e.department %></td>
            <td>Rs. <%= e.monthlySalary %></td>
            <td>
              <a href="/employees/edit/<%= e._id %>" class="btn btn-sm btn-secondary">Edit</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
