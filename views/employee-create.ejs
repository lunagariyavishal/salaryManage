<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Add / Edit Employee</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>
  <div class="container mt-4">
    <h3><%= employee && employee._id ? 'Edit' : 'Add' %> Employee</h3>

    <form method="POST" action="<%= employee && employee._id ? '/employees/edit/' + employee._id : '/employees/create' %>" class="row g-2">
      <div class="col-md-6"><input name="name" class="form-control" placeholder="Name" required value="<%= employee.name || '' %>"></div>
      <div class="col-md-6"><input name="designation" class="form-control" placeholder="Designation" value="<%= employee.designation || '' %>"></div>
      <div class="col-md-6"><input name="department" class="form-control" placeholder="Department" value="<%= employee.department || '' %>"></div>
      <div class="col-md-3"><input name="monthlySalary" type="number" class="form-control" placeholder="Monthly Salary" required value="<%= employee.monthlySalary || '' %>"></div>
      <div class="col-md-6">
        <label>Email</label>
        <input name="email" class="form-control" placeholder="Email"
              value="<%= employee.email || '' %>">
      </div>
      <div class="col-md-3 form-check">
        <label class="form-check-label">
          <input type="checkbox" name="isActive" class="form-check-input" <%= employee.isActive !== false ? 'checked' : '' %>> Active
        </label>
      </div>

      <div class="col-12"><button class="btn btn-primary">Save</button></div>
    </form>
  </div>
</body>
</html>
